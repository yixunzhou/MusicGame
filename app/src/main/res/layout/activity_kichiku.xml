            android:text="Button5"
            android:background="#00000000"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Button8"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>